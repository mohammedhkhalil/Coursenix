@model LoginViewModel

@{
	ViewData["Title"] = "Sign In";
	Layout = "_Layout";
}
@section css {
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
          rel="stylesheet" />
    <!-- Font Awesome for the eye icon -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="/css/sign-in.css" />
}

 
    <!-- Login Form -->
    <div class="container">
        <div class="login-container">
            <h2 class="text-center mb-4">Welcome Back!</h2>
            <p class="text-center text-muted mb-4">
                Enter your credentials to access your account
            </p>

            <form asp-controller="Account" asp-action="Login" method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <div class="form-check form-check-inline">
                        <input asp-for="Role"
                               type="radio"
                               class="form-check-input remove-shadow"
                               value="Student"
                               id="studentRadio"
                               checked />
                        <label class="form-check-label" for="studentRadio">Student</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Role"
                               type="radio"
                               class="form-check-input remove-shadow"
                               value="Teacher"
                               id="teacherRadio" />
                        <label class="form-check-label" for="teacherRadio">Teacher</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Role"
                               type="radio"
                               class="form-check-input remove-shadow"
                               value="Admin"
                               id="AdminRadio" />
                        <label class="form-check-label" for="AdminRadio">Admin</label>
                    </div>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Email"
                           class="form-control form-control-lg remove-shadow"
                           placeholder="Email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="password-container">
                        <input asp-for="Password"
                               class="form-control form-control-lg remove-shadow"
                               placeholder="Password" />
                        <i class="far fa-eye-slash toggle-password" data-target="Password"></i>

                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe"
                               class="form-check-input remove-shadow" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <div class="form-text">
                        <a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a>
                    </div>
                </div>

                <button type="submit" class="btn submit btn-lg w-100">Sign in</button>

                <div class="text-center mt-3">
                    <span class="form-text">No account? <a href="@Url.Action("Index", "Home")">Sign up</a></span>
                </div>
            </form>

        </div>
    </div>

 
   
    @section Scripts {
        <!-- Bootstrap Bundle with Popper -->
        <script src="/js/TogglePassword.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    }

